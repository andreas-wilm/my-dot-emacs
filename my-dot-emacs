          (lambda ()
            (message "Setting up my bibtex hooks")
            (auto-fill-mode nil)
            (local-set-key [return] 'newline-and-indent)
            ;; tab normally set to bibtex-find-text. don't use this,
            ;; but need tab for yasnippet
            ;; FIXME: doesnt work
            (local-set-key [tab] 'yas/expand)
            ))



